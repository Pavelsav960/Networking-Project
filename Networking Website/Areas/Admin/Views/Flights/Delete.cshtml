@model Networking_Website.Models.Flights
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-info">Delete Flight</h2>
<form asp-action="Delete" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="OriginCountry"></label>
            </div>
            <div class="col-4">
                <input asp-for="OriginCountry" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="OriginCountry" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="DestinationCountry"></label>
            </div>
            <div class="col-4">
                <input asp-for="DestinationCountry" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="DestinationCountry" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Price"></label>
            </div>
            <div class="col-4">
                <input asp-for="Price" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Date"></label>
            </div>
            <div class="col-4">
                <input asp-for="Date" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Time"></label>
            </div>
            <div class="col-4">
                <input asp-for="Time" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="Time" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IsDirect"></label>
            </div>
            <div class="col-4">
                <input asp-for="IsDirect" disabled="disabled" class="" type="checkbox" />
            </div>
            <span asp-validation-for="IsDirect" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IsOneWay"></label>
            </div>
            <br />
            <div class="col-4">
                <input asp-for="IsOneWay" disabled="disabled" class="" type="checkbox" />
            </div>
            <span asp-validation-for="IsOneWay" class="text-danger"></span>
        </div>

        <div class="form-group">
            <h3>Do you want to delte this flight ?</h3>
            <input type="submit" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" value="Delete">
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
